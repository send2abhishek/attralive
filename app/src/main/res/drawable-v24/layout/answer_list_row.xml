<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:elevation="10dp"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingRight="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:id="@+id/tv_votecount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vote"
                android:id="@+id/tv_vote"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_gravity="center"
                android:id="@+id/tv_watchcount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="watch"
                android:id="@+id/tv_watchtext"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:text="it's so simple.Create an XML file like below one. Set it as background  for the button. Change the radius attribute to your wish, if you need more curve for the button. "
    />
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_editanswer"
            android:text="edit"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_createdby"
            android:text="Asked by:Gayathry,Bangalore"
            android:textColor="#1EBBEE"
            android:gravity="end"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up_grey_24dp"
            android:id="@+id/im_answerlikes"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answerlikescount"
            android:text="12"
            android:paddingLeft="5dp"
            android:gravity="center"
            />
        <ImageView
            android:paddingLeft="5dp"
            android:id="@+id/im_answerdislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_down_grey_24dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answerdislikecount"
            android:text="92"
            />
        <TextView
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_voteans"
            android:text="vote"
            android:gravity="end"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingbar"
            android:stepSize="1.7"
            android:numStars="5"
            android:rating="2"
            android:scaleX="1"
            android:scaleY="1"
           android:paddingLeft="8dp"
            android:theme="@style/RatingBar"

            style="@style/Widget.AppCompat.RatingBar.Small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_anscreatetime"
            android:text="12 Nov 2015 08:55 PM"
            android:gravity="end"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp">

        <TextView
            android:paddingTop="5dp"
            android:layout_below="@+id/thirdrelativelayout"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_showcomments"
            android:text="Add and View Comments"
            android:textSize="10sp"
            android:textColor="#000"
            android:drawablePadding="-9dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:gravity="left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ansid"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>
</android.support.design.card.MaterialCardView>