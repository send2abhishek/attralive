<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/background_image"
    tools:context=".activity.OtpValidationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="#000"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:foreground="@drawable/color_gradient"
            android:src="@drawable/homescreenimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="221dp"
        android:layout_marginBottom="175dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_bg"

        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#4c5a52"
            android:lineSpacingExtra="10sp"
            android:layout_gravity="center"
            android:text="@string/enter_the_otp" />
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp_num1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/otp_num2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/otp_num3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"/>

            <EditText
                android:id="@+id/otp_num4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:inputType="number"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_otpNotReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="11sp"
                android:textColor="#32b0e4"
                android:textSize="13sp"
                android:textStyle="italic"
                android:text="@string/have_not_received_OTP" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_resendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#32b0e4"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:text="@string/resend_otp"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dp"
            android:layout_marginRight="40dp"
            android:gravity="right"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3sp"
            android:text="@string/validate"
            android:textStyle="bold"
            android:textColor="#1eaa4b"
            android:textSize="18sp" />


    </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>