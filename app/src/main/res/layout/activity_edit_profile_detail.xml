                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_password_fill"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <android.support.design.widget.TextInputEditText

                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            android:text="******"
                            android:id="@+id/et_password"
                            android:hint="Password"
                            android:lineHeight="17sp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"
                            android:background="@null"/>

                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/changePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:gravity="right"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:textColor="#32b0e4" />

                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_marginLeft="38dp"
                    android:layout_height="0.5dp"
                    android:background="#8f9290" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_empid_fill"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            android:id="@+id/et_empId"
                            android:hint="Employee ID"
                            android:lineHeight="17sp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_wrkloc_fill"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        app:ms_thickness="0.2dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/sp_userWorkLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#949c97"
                        app:ms_enableFloatingLabel="true"
                        app:ms_arrowSize="12dp"
                        app:ms_floatingLabelColor="#949c97"
                        app:ms_floatingLabelText="Work Location"
                        app:ms_hint="Work Location"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_bu_fill"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        app:ms_thickness="0.2dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/sp_selectbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#949c97"
                        app:ms_enableFloatingLabel="true"
                        app:ms_arrowSize="12dp"
                        app:ms_floatingLabelColor="#949c97"
                        app:ms_floatingLabelText="Select BU"
                        app:ms_hint="Select BU"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_phone_fill"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_mobilenumber"
                            android:hint="Phone"
                            android:lineHeight="17sp"
                            android:drawablePadding="18dp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelUpdate">
                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/lightBlue"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:shadowColor="@color/shadowcolor"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginBottom="80dp"/>
                    <Button
                        android:layout_toRightOf="@+id/cancelBtn"
                        android:id="@+id/updateBtn"
                        android:layout_width="110dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="32dp"
                        android:background="@color/lightBlue"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:shadowColor="@color/shadowcolor"
                        android:text="Update"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginBottom="80dp"/>
                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</android.support.v7.widget.LinearLayoutCompat>
