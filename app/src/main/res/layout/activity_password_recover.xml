<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PasswordRecover">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <ImageView
            android:scaleType="fitStart"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/attra_logo"
            android:src="@drawable/attra_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <ImageView

            android:layout_below="@+id/attra_logo"
            android:id="@+id/changePasswordImage"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@mipmap/reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:layout_weight="1.3"
            android:paddingLeft="12dp"
            android:id="@+id/et_otp"
            android:textColor="#949c97"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLength="4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/new_password"/>

        <EditText
            android:layout_weight="1.3"
            android:paddingLeft="12dp"
            android:id="@+id/et_newPassword"
            android:textColor="#949c97"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_style"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:layout_weight="1.3"
            android:paddingLeft="12dp"
            android:id="@+id/et_confirmPassword"
            android:textColor="#949c97"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_style"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/btn_resetCancel"
                android:fontFamily="Segoe UI"
                android:text="@string/cancel"
                android:textSize="18sp"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:layout_centerHorizontal="true"
                android:paddingTop="7dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="7dp"
                android:background="@drawable/reset_button_style"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save"
                android:fontFamily="Segoe UI"
                android:text="@string/save"
                android:textSize="18sp"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:layout_centerHorizontal="true"
                android:paddingTop="7dp"
                android:layout_marginLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="7dp"
                android:background="@drawable/reset_button_style"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>