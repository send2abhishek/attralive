<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserDetailsActivity">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:scaleType="fitXY"
                android:src="@drawable/bg2" />
            <LinearLayout
                android:layout_marginTop="-184dip"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backward_arrow"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="0.01sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="80dip">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"/>
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="24sp"
                    android:text="Welcome"
                    android:textColor="#f1f5f4"
                    android:textSize="18sp"
                    android:lineSpacingExtra="6sp"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:layout_below="@id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="24sp"
                    android:text="Awnish Kumar"
                    android:textColor="#f1f5f4"
                    android:textSize="18sp"
                    android:lineSpacingExtra="0.01sp"/>
                <ImageView
                    android:layout_marginTop="-4dp"
                    android:layout_marginLeft="-45dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:layout_below="@id/userName"
                    android:id="@+id/im_profileimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_edit_line" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_empid_line"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            android:id="@+id/et_empId"
                            android:hint="Employee ID"
                            android:lineHeight="17sp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_desig_line"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_designation"
                            android:hint="Designation"
                            android:lineHeight="24sp"
                            android:drawablePadding="18dp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_wrkloc_line"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        app:ms_thickness="0.5dp"
                        android:layout_marginLeft="0dp"
                        android:id="@+id/sp_userWorkLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#949c97"
                        app:ms_enableFloatingLabel="true"
                        app:ms_arrowSize="12dp"
                        app:ms_floatingLabelColor="#949c97"
                        app:ms_floatingLabelText="Work Location"
                        app:ms_hint="hint"
                        app:ms_multiline="false" />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_wrkloc_line"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        app:ms_thickness="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/sp_userWorkLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#949c97"
                        app:ms_enableFloatingLabel="true"
                        app:ms_arrowSize="12dp"
                        app:ms_floatingLabelColor="#949c97"
                        app:ms_floatingLabelText="Select BU"
                        app:ms_hint="hint"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_bu_line"/>
                    <fr.ganfra.materialspinner.MaterialSpinner
                        app:ms_thickness="0.5dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/sp_selectbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#949c97"
                        app:ms_enableFloatingLabel="true"
                        app:ms_arrowSize="12dp"
                        app:ms_floatingLabelColor="#949c97"
                        app:ms_floatingLabelText="Select BU"
                        app:ms_hint="hint"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_phone_line"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_mobilenumber"
                            android:hint="Phone"
                            android:lineHeight="17sp"
                            android:drawablePadding="18dp"
                            android:textColorHint="#949c97"
                            android:textSize="14sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/continuebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="18sp"
                android:text="Submit"
                android:shadowColor="@color/shadowcolor"
                android:textAlignment="center"/>

        </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
