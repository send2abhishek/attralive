<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".activity.ForgotPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="11.75">
        <ImageView
            android:scaleType="fitStart"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/attra_logo"
            android:src="@drawable/attra_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_weight="5"
            android:layout_below="@+id/attra_logo"
            android:id="@+id/forgotPasswordImage"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/illustration_fp"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            android:layout_weight="1.25"
            android:id="@+id/forgotPasswordText"
            android:textSize="30sp"
            android:fontFamily="Segoe UI"
            android:layout_margin="5dp"
            android:lineHeight="24sp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4sp"
            android:textColor="#4c5a52"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.25"
            android:fontFamily="Segoe UI"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="3sp"
            android:text="@string/we_just_need"
            android:textColor="#949c97"
            android:textSize="16sp" />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:id="@+id/emailId"
            android:textColor="#949c97"
            android:inputType="text"
            android:lineSpacingExtra="3sp"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:hint="@string/registered_email_id"
            android:background="@drawable/edit_text_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:id="@+id/btn_resetPassword"
            android:fontFamily="Segoe UI"
            android:text="@string/reset_password"
            android:textSize="18sp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4sp"
            android:layout_centerHorizontal="true"
            android:paddingTop="7dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="7dp"
            android:background="@drawable/reset_button_style"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:id="@+id/back_to_login_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:scaleType="center"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"/>
            <TextView
                android:id="@+id/backtologin"
                android:gravity="center"
                android:layout_weight="0.25"
                android:textStyle="bold"
                android:layout_marginLeft="5.5dp"
                android:textSize="14sp"
                android:textColor="#949c97"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/back_to_login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
