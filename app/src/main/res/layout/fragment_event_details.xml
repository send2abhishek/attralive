<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="26dp"
    tools:context=".fragment.EventDetailsFragment"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/Ll_first">
   <LinearLayout
       android:layout_marginLeft="44dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_location"
           android:maxLines="2"
           android:drawablePadding="10dp"
           android:drawableLeft="@drawable/ic_place_red_24dp"
           android:text="@string/hello_blank_fragment"
           android:paddingRight="17dp"/>

       <android.support.v7.widget.CardView
           android:id="@+id/crd_regbutton"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_gravity="center_horizontal"
           android:elevation="10dp"
           android:layout_marginTop="28dp"
           android:layout_marginRight="17dp"
           app:cardCornerRadius="4dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#2699fb">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                  android:gravity="center"
                   android:lineHeight="22sp"
                   android:lineSpacingExtra="0.9sp"
                   android:text="Register"
                   android:textColor="#fff"
                   android:textSize="20sp"
                   android:textStyle="bold" />
           </RelativeLayout>
       </android.support.v7.widget.CardView>
   </LinearLayout>

    <TextView
        android:layout_marginLeft="44dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_date_range_blue_24dp"
        android:text="26 JAN,2019"
        android:paddingRight="17dp"/>
    <TextView
        android:layout_marginLeft="44dp"
        android:paddingTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_restore_black_24dp"
        android:text="WED-05:00PM"
        android:paddingRight="17dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Ll_second"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_marginLeft="33dp"
                android:id="@+id/tv_regid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="35dp"
                android:paddingRight="34dp"
                android:paddingTop="38dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="67dp"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:text="@string/hello_blank_fragment"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="31dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="13dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="12dp"
                android:src="@drawable/qrcode"
                android:layout_toRightOf="@+id/tv_regid"
                android:background="@drawable/grey_rectangle"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="31dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >

            <TextView
                android:layout_marginLeft="44dp"
                android:paddingTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:text="@string/hello_blank_fragment"
                android:paddingRight="17dp"/>


            <TextView
                android:layout_marginLeft="44dp"
                android:paddingTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:text="26 JAN,2019"
                android:paddingRight="17dp"/>
            <TextView
                android:layout_marginLeft="44dp"
                android:paddingTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_restore_black_24dp"
                android:text="WED-05:00PM"
                android:paddingRight="17dp"
                android:paddingBottom="17dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>