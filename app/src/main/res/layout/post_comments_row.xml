<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maincommentslayout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/im_profile"
            android:src="@drawable/ic_behance"
            android:layout_gravity="top"
            android:paddingTop="5dp"
            android:layout_centerInParent="true"
            />
        <LinearLayout

            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/commentslayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/tv_userName"
                android:text="asfdg"
                android:textColor="#4d565c"
                />
                <TextView
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/tv_timeago"
                    android:text="1 hour ago"
                    android:textColor="#808495"
                    android:gravity="end"/>
            </LinearLayout>
            <TextView
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/tv_location"
                android:textColor="#808495"
                android:text="dddsvzfbgscdvfcxczxc"/>

            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/tv_commentmsg"
                android:text="1 hour ago"
                android:textStyle="bold"
                android:textColor="#4d565c"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
