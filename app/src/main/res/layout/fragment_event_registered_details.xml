<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="26dp"
    tools:context=".fragment.EventDetailsFragment">

    <LinearLayout
        android:id="@+id/ll_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_regid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"

                android:layout_marginTop="0dp"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:paddingLeft="35dp"
                android:paddingTop="38dp"
                android:paddingRight="34dp"
                android:paddingBottom="37dp"
                android:text="@string/registrationid"
                android:textColor="#fefefe"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/im_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="31dp"
                android:layout_toRightOf="@+id/tv_regid"
                android:background="@drawable/grey_rectangle"
                android:paddingLeft="13dp"
                android:paddingTop="14dp"
                android:paddingRight="12dp"
                android:paddingBottom="14dp"
                android:src="@drawable/qrcode" />

        </RelativeLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_eventvenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:drawableLeft="@drawable/ic_place_red_24dp"
                    android:drawablePadding="10dp"
                    android:maxLines="2"
                    android:paddingTop="17dp"
                    android:paddingRight="17dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/tv_viewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="17dp"
                    android:text="@string/view_map"
                    android:textColor="@color/lightBlue" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_eventdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:drawableLeft="@drawable/ic_date_range_blue_24dp"
                android:drawablePadding="10dp"
                android:maxLines="2"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:text="26 JAN,2019" />

            <TextView
                android:id="@+id/tv_eventtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:drawableLeft="@drawable/ic_restore_black_24dp"
                android:drawablePadding="10dp"
                android:maxLines="2"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp"
                android:text="WED-05:00PM" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
