<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegistrationActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="#000"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:foreground="@drawable/color_gradient"
            android:src="@drawable/homescreenimage" />
        <LinearLayout
            android:id="@+id/Ll_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineHeight="24sp"
                android:lineSpacingExtra="4sp"
                android:text="@string/signup_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/welcome"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_attra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineHeight="22sp"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/attra"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="22sp"
                    android:lineSpacingExtra="4sp"
                    android:paddingTop="4dp"
                    android:text="@string/live"
                    android:textColor="#f4504c"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ll_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/tv_regusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:lineHeight="17sp"
                    android:paddingTop="18dp"
                    android:text="@string/fullname_text"
                    android:textColor="@color/text_coloring_login"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="Enter Your Name"
                    android:lineHeight="17sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#999"
                    android:textSize="14sp" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_regusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/linecoloring" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_usernameerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="139dp"
                android:layout_marginRight="4dp"
                android:lineHeight="24sp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textSize="10sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                >

                <TextView
                    android:id="@+id/tv_usernametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:lineHeight="17sp"
                    android:paddingTop="12dp"
                    android:text="@string/regemail_text"
                    android:textColor="@color/text_coloring_login"
                    android:textSize="14sp"

                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_attraemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:lineHeight="19sp"
                    android:paddingTop="12dp"
                    android:text="@string/email_text"

                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_attraemail"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="johndoe"
                    android:lineHeight="17sp"
                    android:paddingTop="12dp"

                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_regemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/linecoloring" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_emailerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="139dp"
                android:layout_marginRight="4dp"
                android:lineHeight="24sp"
                android:paddingTop="5dp"
                android:singleLine="true"


                android:textSize="10sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                >

                <TextView
                    android:id="@+id/tv_regpsdtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:lineHeight="17sp"
                    android:paddingTop="12dp"
                    android:text="@string/password_text"
                    android:textColor="@color/text_coloring_login"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_regpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:lineHeight="17sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#999"
                    android:textSize="14sp" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_regpswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:background="@color/linecoloring" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_passworderror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="139dp"
                android:layout_marginRight="4dp"
                android:lineHeight="24sp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Must have atleast 6 alphanumeric characters"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                >

                <TextView
                    android:id="@+id/tv_confmpswdtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:lineHeight="17sp"
                    android:paddingTop="12dp"
                    android:text="@string/confirmpswd_text"
                    android:textColor="@color/text_coloring_login"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_confirmpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:lineHeight="18sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#999"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/linecoloring" />

            <TextView
                android:id="@+id/tv_confrmpswderror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="139dp"
                android:layout_marginRight="4dp"
                android:lineHeight="24sp"
                android:paddingTop="5dp"
                android:singleLine="true"


                android:textSize="10sp"
                android:textStyle="italic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/i_agree"
                    android:text="@string/agree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:buttonTint="@color/white" />
                <TextView
                    android:id="@+id/tnms"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="@string/tnm"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/crd_regbutton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                android:layout_marginTop="12dp"

                app:cardCornerRadius="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color_gradient_login_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="99dp"
                        android:layout_marginBottom="12dp"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:drawablePadding="8dp"
                        android:lineHeight="22sp"
                        android:lineSpacingExtra="0.9sp"
                        android:text="@string/continue_text"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

