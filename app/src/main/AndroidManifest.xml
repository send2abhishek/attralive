<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.attra.attralive">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="default" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notifications_black_24dp" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <service
            android:name=".Service.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Service.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CreateBlogActivity" />
        <activity android:name=".activity.BlogDetails" />
        <activity android:name=".activity.ReplayActivity" />
        <activity android:name=".activity.UpdateBlogActivity" />
        <activity android:name=".activity.CreateForumActivity" />
        <activity android:name=".activity.MainBlogCategoryActivity" />
        <activity android:name=".activity.DetailedForumScreen" />
        <activity android:name=".activity.AddAnswerComments" />
        <activity android:name=".activity.QuestionComments" />
        <activity android:name=".activity.NewsFeedPostActivity" />
        <activity android:name=".activity.OtpValidationActivity" />
        <activity android:name=".activity.UserDetailsActivity" />
        <activity android:name=".activity.ForgotPasswordActivity"></activity>
    </application>

</manifest>